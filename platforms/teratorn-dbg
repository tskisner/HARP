#!/bin/sh

CXX=g++ CC=gcc CXXFLAGS="-O0 -g -Wall" CFLAGS="-O0 -g -Wall" ./configure --prefix=/data/software --with-fftw-cpp='-I/ports/include' --with-fftw-libs='-L/ports/lib -lfftw3_threads -lfftw3' --with-cfitsio-cpp="-I/ports/include" --with-cfitsio-libs="-L/ports/lib -lcfitsio" --prefix=/data/software --disable-shared --with-boost=/ports
