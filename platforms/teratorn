#!/bin/sh

CXX=g++-mp-4.5 CC=gcc-mp-4.5 CXXFLAGS="-O3 -march=native -DNDEBUG" CFLAGS="-O3 -march=native -DNDEBUG" ./configure --prefix=/data/software --with-cfitsio-cpp="-I/ports/include" --with-cfitsio-libs="-L/ports/lib -lcfitsio" --prefix=/data/software --disable-shared --with-boost=/usr/local/boost-1.46.1
