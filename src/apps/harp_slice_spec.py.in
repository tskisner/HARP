#!@PYTHON@

import os
import sys
import re
import numpy as np
import pyfits as pf

infile = sys.argv[1]
outfile = sys.argv[2]
nlambda = int(sys.argv[3])

hdus = pf.open( infile )

nhdu = len ( hdus )
if ( nhdu != 4 ):
	print "incorrect number of HDUS (!= 4)"
	exit()

newhdus = pf.HDUList([])

# slice FLUX HDU
head = hdus[0].header
data = hdus[0].data
newdata = data[:,0:nlambda]
newhdus.append ( pf.ImageHDU( data=newdata, header=head ) )

# slice WAVELENGTH HDU
head = hdus[1].header
data = hdus[1].data
newdata = data[0:nlambda]
newhdus.append ( pf.ImageHDU( data=newdata, header=head ) )

# copy TARGETINFO HDU
newhdus.append ( hdus[2] )

# slice OBJPHOT HDU
head = hdus[3].header
data = hdus[3].data
newdata = data[:,0:nlambda]
newhdus.append ( pf.ImageHDU( data=newdata, header=head ) )

# write output
if ( os.path.isfile ( outfile ) ):
	os.remove ( outfile )
newhdus.writeto( outfile )

